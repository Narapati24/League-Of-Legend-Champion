<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LeagueOfLegendChampion" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/gray_50opacity</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_launcher_background</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
    </style>

    <style name="border">
        <item name="android:background">@drawable/cell_shape</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>